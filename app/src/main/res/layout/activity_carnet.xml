<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_carnet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/background_color"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/activity_header"/>

        <!-- Header: título -->
        <TextView
            style="@style/TituloRecibo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:text="Carnet" />


        <LinearLayout
            android:id="@+id/container_carnet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"

            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <!-- Tarjeta del Carnet -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Título: Nombre Completo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/inter_big_semibold"
                    android:gravity="center"
                    android:text="Nombre Completo"
                    android:textColor="@color/textPrimary"
                    android:textSize="24sp" />

                <!-- Nombre del socio -->
                <TextView
                    android:id="@+id/tvNombreSocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/inter_big_semibold"
                    android:gravity="center"
                    android:text="xxxxxxx"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp" />

                <!-- Fila: ID -->
                <LinearLayout style="@style/RowContainerCarnet">

                    <TextView
                        style="@style/RowLabel"
                        android:text="ID:" />

                    <TextView
                        android:id="@+id/tvId"
                        style="@style/RowValue"
                        android:text="N°" />
                </LinearLayout>

                <!-- Fila: DNI -->
                <LinearLayout style="@style/RowContainerCarnet">

                    <TextView
                        style="@style/RowLabel"
                        android:text="DNI:" />

                    <TextView
                        android:id="@+id/tvDni"
                        style="@style/RowValue"
                        android:text="xxxxxxxx" />
                </LinearLayout>

                <!-- Fila: Fecha de insc -->
                <LinearLayout style="@style/RowContainerCarnet">

                    <TextView
                        style="@style/RowLabel"
                        android:text="Fecha de insc:" />

                    <TextView
                        android:id="@+id/tvFechaInsc"
                        style="@style/RowValue"
                        android:text="xx/xx/xxxx" />
                </LinearLayout>

                <!-- Fila: ¿Socio? -->
                <LinearLayout style="@style/RowContainerCarnet">

                    <TextView
                        style="@style/RowLabel"
                        android:text="¿Socio?" />

                    <TextView
                        android:id="@+id/tvSocio"
                        style="@style/RowValue"
                        android:text="Sí/No" />
                </LinearLayout>

                <!-- Fila: Teléfono -->
                <LinearLayout style="@style/RowContainerCarnet">

                    <TextView
                        style="@style/RowLabel"
                        android:text="Teléfono:" />

                    <TextView
                        android:id="@+id/tvTelefono"
                        style="@style/RowValue"
                        android:text="xxxxxxxxxx" />
                </LinearLayout>

                <!-- Fila: Dirección -->
                <LinearLayout style="@style/RowContainerLast">

                    <TextView
                        style="@style/RowLabel"
                        android:text="Dirección:" />

                    <TextView
                        android:id="@+id/tvDireccion"
                        style="@style/RowValue"
                        android:text="xxxxxxxx" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Emitir carnet -->
            <Button
                android:id="@+id/btnEmitirCarnet"
                style="@style/PrimaryButton"
                android:text="Emitir carnet" />
        </LinearLayout>


        <!-- Barra inferior fija -->
        <include layout="@layout/activity_barra" />
    </LinearLayout>

    <!-- Menú lateral -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/activity_menu" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>