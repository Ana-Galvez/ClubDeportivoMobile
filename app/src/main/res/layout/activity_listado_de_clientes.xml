<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Flecha y menú hamburguesa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="40dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/img_flecha_izq"
            android:contentDescription="Volver" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/img_menu_hamburguesa"
            android:contentDescription="Menú" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:text="Listado de Clientes"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText"
        style="@style/Titulo"/>

    <!-- Buscador -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_search"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar"
            android:backgroundTint="@android:color/transparent"
            android:inputType="text"
            android:padding="0dp"
            android:textColor="@color/textPrimary"/>

        <ImageView
            android:id="@+id/ivBuscar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Buscar" />
    </LinearLayout>


    <!-- Lista (scroll) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Card -->
            <include layout="@layout/item_cliente" />

            <!-- Card -->
            <include layout="@layout/item_cliente" />

            <!-- Card -->
            <include layout="@layout/item_cliente" />

            <!-- Card -->
            <include layout="@layout/item_cliente" />

            <!-- Card -->
            <include layout="@layout/item_cliente" />

            <!-- Card -->
            <include layout="@layout/item_cliente" />

            <!-- Card -->
            <include layout="@layout/item_cliente" />

            <!-- Card -->
            <include layout="@layout/item_cliente" />

            <!-- Card -->
            <include layout="@layout/item_cliente" />

        </LinearLayout>
    </ScrollView>

    <!-- Espaciador para empujar la barra al fondo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Barra de navegación inferior -->
    <include layout="@layout/activity_barra" />

</LinearLayout>