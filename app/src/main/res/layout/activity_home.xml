<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:gravity="center_horizontal">
        <!-- Menú hamburguesa --><!-- no usamos el import header porque no tenemos boton de flecha -->
        <LinearLayout
            android:id="@+id/btnmenuhamburguesa"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center_vertical|end"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="35dp">

            <ImageView
                android:id="@+id/img_menu_hamburguesa"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_menu_hamburguesa"
                android:layout_marginEnd="10dp" />
        </LinearLayout>

        <!-- Hola -->
        <TextView
            android:id="@+id/tvBienvenida"
            android:text="¡Hola, usuario!"
            android:layout_marginTop="20dp"
            style="@style/Saludo" />

        <!-- Espaciador para empujar la barra al fondo -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"></View>

        <!-- Botón Registrar Clientes -->

        <LinearLayout
            android:id="@+id/btnRegistrarCliente"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/bg_button_home_registrar_cliente"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/registrar_clientes"
                android:src="@drawable/img_nuevo_negro"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registrar_clientes"
                android:textSize="16sp"
                android:textColor="@color/white_1" />
        </LinearLayout>

        <!-- Botón Listado Clientes -->
        <LinearLayout
            android:id="@+id/btnListadoClientes"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/bg_button_home_listado_clientes"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/listado_de_clientes"
                android:src="@drawable/img_clientes_negro"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listado_de_clientes"
                android:textSize="16sp"
                android:textColor="@color/white_1" />
        </LinearLayout>

        <!-- Botón Registro Pago -->
        <LinearLayout
            android:id="@+id/btnRegistroPago"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/bg_button_home_pago"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/registro_pago"
                android:src="@drawable/img_pagos_negro"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registro_pago"
                android:textSize="16sp"
                android:textColor="@color/white_1" />
        </LinearLayout>

        <!-- Botón Socios Morosos -->
        <LinearLayout
            android:id="@+id/btnSociosMorosos"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/bg_button_home_morosos"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/lista_de_socios_morosos"
                android:src="@drawable/img_morosos_negro"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lista_de_socios_morosos"
                android:textSize="16sp"
                android:textColor="@color/white_1" />
        </LinearLayout>

        <!-- Espaciador para empujar la barra al fondo-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Barra inferior -->
        <include layout="@layout/activity_barra" />
    </LinearLayout>
    <!-- Menú lateral -->
    <LinearLayout
        android:id="@+id/drawerContainer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">


        <include layout="@layout/activity_menu" />
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
