<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:background="@drawable/bordes_cliente"
        android:gravity="center_vertical">

        <!-- Bloque de textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvClienteNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black_1"/>

            <TextView
                android:id="@+id/tvClienteTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray_1"/>
        </LinearLayout>

        <!-- Ãconos a la derecha -->
        <ImageView
            android:id="@+id/ivVerCliente"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Carnet"
            android:src="@drawable/img_ver_cliente"
            android:onClick="onMostrarCarnetClick"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/ivRegistrarPago"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Pago"
            android:src="@drawable/img_ver_pago"
            android:onClick="onRegistrarPagoClick"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/ivEditarCliente"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Editar Cliente"
            android:src="@drawable/img_editar_cliente"
            android:onClick="onEditarClienteClick"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/ivEliminarCliente"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Eliminar Cliente"
            android:src="@drawable/img_eliminar_cliente"
            android:onClick="onEliminarClienteClick"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>