<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="30dp"
        android:padding="12dp"
        android:background="@drawable/bordes_cliente"
        android:gravity="center_vertical">

        <!-- Bloque de textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedro Perez"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socio"
                android:textSize="14sp"
                android:textColor="@color/gray_1"
                android:id="@+id/tvClienteTipo"/>
        </LinearLayout>

        <!-- Ãconos a la derecha -->
        <ImageView
            android:id="@+id/ivVerCliente"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Ver carnet"
            android:src="@drawable/img_ver_cliente"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onMostrarCarnetClick"/>

        <ImageView
            android:id="@+id/ivRegistrarPago"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Formulario pago"
            android:src="@drawable/img_ver_pago"
            android:layout_marginStart="8dp"
            android:onClick="onRegistrarPagoClick"/>

        <ImageView
            android:id="@+id/ivEditarCliente"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img_editar_cliente"
            android:layout_marginStart="8dp"
            android:contentDescription="Editar cliente"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="onEditarClienteClick"/>

        <ImageView
            android:id="@+id/ivEliminarCliente"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Eliminar"
            android:src="@drawable/img_eliminar_cliente"
            android:layout_marginStart="8dp"
            android:onClick="onEliminarClienteClick"/>
    </LinearLayout>
</LinearLayout>