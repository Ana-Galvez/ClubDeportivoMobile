<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENIDO PRINCIPAL -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/background_color">

        <include layout="@layout/activity_header"/>

    <!-- Título -->
    <TextView
        android:text="Registro de Pago Socio"
        android:layout_marginTop="20dp"
        style="@style/Titulo"/>

    <!-- Espaciador para empujar la barra al fondo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
    <!-- VER INPUTS -->
    <!-- Cliente -->
    <LinearLayout
        style="@style/FormularioContainer">

        <TextView
            style="@style/FormularioLabel"
            android:text="Cliente" />

        <AutoCompleteTextView
            android:id="@+id/cliente"
            android:hint="Ingrese un nombre"
            android:inputType="textPersonName"
            android:completionThreshold="1"
            android:drawableEnd="@drawable/ic_search"
            android:drawablePadding="12dp"
            style="@style/FormularioEditText"/>
    </LinearLayout>

    <!-- Cuota pendiente -->
    <LinearLayout
        style="@style/DropdownContainer">

        <TextView
            style="@style/DropdownTextView"
            android:text="Cuota pendiente"
            />

        <Spinner
            android:id="@+id/spinner_cuota_pendiente"
            style="@style/DropdownSpinner" />
    </LinearLayout>

    <!-- Monto -->
    <LinearLayout
        style="@style/FormularioContainer">

        <TextView
            android:text="Monto $"
            style="@style/FormularioLabel"
            />

        <EditText
            android:id="@+id/monto"
            android:hint="0.00"
            style="@style/FormularioEditText"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <!-- Forma de Pago -->
    <LinearLayout
        style="@style/DropdownContainer">

        <TextView
            style="@style/DropdownTextView"
            android:text="Forma de Pago"/>

        <Spinner
            android:id="@+id/spinner_pago"
            style="@style/DropdownSpinner"
            />
    </LinearLayout>

    <!-- Cantidad de cuotas -->
    <LinearLayout
        style="@style/DropdownContainer">

        <TextView
            android:id="@+id/titulo_cuotas"
            style="@style/DropdownTextView"
            android:text="Cantidad de cuotas"/>

        <Spinner
            android:id="@+id/spinner_cuotas"
            style="@style/DropdownSpinner"
            />
    </LinearLayout>

    <!-- Número de tarjeta -->
    <LinearLayout
        style="@style/DropdownContainer">

        <TextView
            android:id="@+id/titulo_num_tarjeta"
            style="@style/DropdownTextView"
            android:text="Número de tarjeta"/>

        <EditText
            android:id="@+id/num_tarjeta"
            android:hint="Ingrese el número de la tarjeta"
            android:inputType="number"
            style="@style/FormularioEditText"/>
    </LinearLayout>

    <!-- Botón Aceptar y Limpiar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <Button
            style="@style/BotonAceptar"
            android:text="Aceptar"
            android:id="@+id/btnAceptarSocio"/>

        <Button
            style="@style/BotonLimpiar"
            android:text="Limpiar"
            android:id="@+id/btnLimpiarSocio"/>
    </LinearLayout>

    <!-- Espaciador para empujar la barra al fondo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
            </LinearLayout>
</ScrollView>
    <!-- Barra inferior fija -->
    <include layout="@layout/activity_barra" />

    </LinearLayout>
    <!-- MENÚ LATERAL -->
    <LinearLayout
        android:id="@+id/drawerContainer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <include layout="@layout/activity_menu"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>