<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para EditText -->
    <style name="FormularioEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:backgroundTint">@color/background_transparent</item>
        <item name="android:textColor">@color/new_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Estilo para TextView de label -->
    <style name="FormularioLabel">
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo para LinearLayout que envuelve cada input -->
    <style name="FormularioContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:background">@color/background_input</item>
    </style>

    <!--Titulo-->
    <style name="Titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/background_primary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/inter_regular_semibold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!--Titulo Home-->
     <style name="Saludo">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:backgroundTint">@color/background_primary</item>
         <item name="android:textColor">@color/textPrimary</item>
         <item name="android:textSize">24sp</item>
         <item name="android:padding">12dp</item>
         <item name="android:fontFamily">@font/inter_regular_semibold</item>
         <item name="android:layout_marginStart">40dp</item>
         <item name="android:layout_marginEnd">40dp</item>
     </style>

     <!--Titulo recibos-->
     <style name="TituloRecibo">
             <item name="android:layout_width">wrap_content</item>
             <item name="android:layout_height">wrap_content</item>
             <item name="android:backgroundTint">@color/background_primary</item>
             <item name="android:textColor">@color/textPrimary</item>
             <item name="android:textSize">24sp</item>
             <item name="android:padding">12dp</item>
             <item name="android:fontFamily">@font/inter_regular_semibold</item>
             <item name="android:layout_marginBottom">10dp</item>
             <item name="android:layout_gravity">center_horizontal</item>
         </style>

    <!--Dropdown-->
    <style name="DropdownContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:background">@color/background_input</item>
    </style>

    <style name="DropdownTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DropdownSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!-- Botones aceptar/Limpiar -->
    <!-- Estilo base para botones -->
    <style name="BotonFormularioBase">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <!-- Botón Aceptar -->
    <style name="BotonAceptar" parent="BotonFormularioBase">
        <item name="android:background">@drawable/botonesredondosregistropagoaceptar</item>
        <item name="android:textColor">@color/btn_aceptar_text</item>
    </style>

    <!-- Botón Limpiar -->
    <style name="BotonLimpiar" parent="BotonFormularioBase">
        <item name="android:background">@color/background_transparent</item>
        <item name="android:textColor">@color/background_primary</item>
    </style>

    <!-- Estilos de recibos de pago -->

    <!-- Contenedor del chip con nombre -->
    <style name="ChipContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Texto del chip -->
    <style name="ChipText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_big_semibold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Contenedor de la tarjeta -->
    <style name="CardContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <!-- Título de la tarjeta -->
    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/inter_small_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Divisor -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grayNeutral</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Contenedor de fila (con margen inferior) -->
    <style name="RowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <!-- Contenedor de fila (última, sin margen inferior) -->
    <style name="RowContainerLast">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Label de fila (lado izquierdo) -->
    <style name="RowLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/inter_small_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Valor de fila (lado derecho) -->
    <style name="RowValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_small_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Botón primario -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/botonesredondosregistropagoaceptar</item>
        <item name="android:fontFamily">@font/inter_regular_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
 </resources>